@model CompanyDetailViewModel
@{
	var photopath = "~/ImagesFront/" + (Model.ExitPhotoPath ?? "logo.jpg");
}
<div class="card mb-4 shadow-sm">
	<div class="card-header bg-secondary text-white">
		<strong>Center : </strong> @Model.CompName
	</div>
	<div class="card-body" style="height:220px;">
		<div class="card-body mb-1">
			<div class="card-title">
				<strong>@Model.TransCode</strong>
			</div>
			<address>
				@Model.Address1  @Model.Address3 @Model.Address3
			</address>
		</div>
		<div class="card-footer text-center">
			<strong>Contact No. @Model.PhoneNo && @Model.MobileNo</strong>
		</div>
	</div>
</div>
