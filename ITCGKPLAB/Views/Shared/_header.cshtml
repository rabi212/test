@using Microsoft.Extensions.Configuration;
@inject IConfiguration _configuration;
@inject Microsoft.Extensions.Options.IOptionsSnapshot<NewMsgConfigModel> newmsgoption;
@{ 
	var msgheader = newmsgoption.Value;
}
<header>
		<nav class="navbar navbar-expand-sm navbar-toggler navbar-light badge-success fixed-top" >
			<div class="container-fluid">
				<a class="navbar-brand" href="/">
					<img src="~/images/logoFile.png" class="logo" alt="logo" asp-append-version="true" />
					@_configuration["AppName"]
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbar"
						aria-expanded="false" aria-label="Toggle Navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse small">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="btn btn-success disabled" asp-controller="Payment" asp-action="Registration" style="width:auto;"><i class="fa fa-shopping-cart pr-2" aria-hidden="true"></i>Add Card</a>
						</li>
						<li class="nav-item">
							<a class="btn btn-success" asp-action="Login" asp-controller="Account" style="width:auto;">Login</a>
						</li>
					</ul>
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						@*<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="About">Our Clients</a>
						</li>*@
						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Contacts">Contacts</a>
						</li>						
					</ul>
				</div>
			</div>
		</nav>
	@if (msgheader.DisplayMsg1)
	{
		<div class="alert alert-info" role="alert">
			@msgheader.DisplayMsgDetails1
		</div>
	}
	@if (msgheader.DisplayMsg2)
	{
		<div class="alert alert-success" role="alert">
			@msgheader.DisplayMsgDetails2
		</div>
	}
	@if (msgheader.DisplayMsg3)
	{
		<div class="alert alert-danger" role="alert">
			@msgheader.DisplayMsgDetails3
		</div>
	}
	@if (msgheader.DisplayMsg4)
	{
		<div class="alert alert-secondary" role="alert">
			@msgheader.DisplayMsgDetails4
		</div>
	}
	@if (msgheader.DisplayMsg5)
	{
		<div class="alert alert-dark" role="alert">
			@msgheader.DisplayMsgDetails5
		</div>
	}
</header>