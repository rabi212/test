@model PatientDetailsMasterViewModel
@inject IMasterRepository _mrepository;
<tr>
	<td class="text-center">
		@*<a href="#" id="Delbutton" type="button" onclick="deleteRow(this)" class="mt-1"><i class="fas fa-times fa-1x icon-color-red"></i></a>*@
		<input id="Delbutton" type="button" onclick="deleteRow(this); GetTotalIPAmt();" value="Del" class="btn btn-info btn-sm" style="width:auto;" />

		<input asp-for="TestGId" class="form-control " hidden />
		@*<input asp-for="Mode" class="form-control  capitalise ModeDetailRecord" onfocus="FindRowIndex(this);TestModeSearchRecord();" onblur="TestFilterMode();" />*@
		<input asp-for="Mode" class="form-control  capitalise ModeDetailRecord" onfocus="FindRowIndex(this);" hidden />
	</td>
	<td>
		<input asp-for="TestId" class="form-control " hidden />		
		<input asp-for="TestMasterViewModels.TestCode" class="form-control  OpenItemDetailRecord"  onfocus="FindRowIndex(this);  TestSearchRecord();" />
	</td>
	<td>
		<input asp-for="Rate" class="form-control  text-sm-right" onfocus="FindRowIndex(this)" onkeypress="return OnlyNumber(event)" onblur="ConvertTwoDecimal(this); GetTotalIPCorrect();" readonly />
		<input asp-for="IPPer1" class="form-control  text-sm-right" onfocus="FindRowIndex(this)" onkeypress="return isNumber(event)" onblur="ConvertTwoDecimal(this);" hidden />
		<input asp-for="IPAmt1" class="form-control  text-sm-right" onkeypress="return isNumber(event)" onblur="ConvertTwoDecimal(this);" hidden />
		<input asp-for="TempSrNo" class="form-control " onfocus="FindRowIndex(this);" readonly hidden />
	</td>
	<td>
		<input asp-for="StanderRate" class="form-control  text-sm-right" onfocus="FindRowIndex(this)" onkeypress="return OnlyNumber(event)" onblur="ConvertTwoDecimal(this);" readonly />		
	</td>
</tr>
