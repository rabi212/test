@model CreateRoleViewModel;

@{
	ViewData["Title"] = "Create Role ";
}
<div class="ForgetPasswordBorder1">
	<h2 class="text-center text-primary">Create New Role</h2>
	<div class="row">
		<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
			<form asp-action="CreateRole" asp-controller="Administration" method="post">
				<div class="form-group">
					<label asp-for="RoleName" class="control-label"></label>
					<input asp-for="RoleName" class="form-control" />
					<span asp-validation-for="RoleName" class="text-danger"></span>
				</div>
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<input type="submit" value="Create Role" class="btn btn-primary" style="width:auto" />
					<a style="width:auto;" asp-action="ListRoles" asp-controller="Administration" class="btn btn-outline-info">Cancel</a>
				</div>
			</form>
		</div>
	</div>
</div>