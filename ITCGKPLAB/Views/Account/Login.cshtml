@model LoginViewModel
@{
	ViewData["Title"] = "Login";
}

<div class="CustomerLoginRelative bg-white">
	<div class="CustomerLogin bg-white">
		<h2 class="border-bottom text-warning">User Login</h2>
		<form asp-action="Login" asp-controller="Account" method="post">
			<div class="imgcontainer">
				<img src="/ICON/acbox.png" alt="Avatar" class="avatar">
			</div>
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="form-row">
				<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
					<div class="form-group row">
						<label asp-for="Email" class="control-label col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"></label>
						<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
							<input asp-for="Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group row">
						<label asp-for="Password" class="control-label col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"></label>
						<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
							<input asp-for="Password" class="form-control" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
					<div class="form-group row">
						<div class="checkbox col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
							<label>
								<input asp-for="RememberMe" />
								@Html.DisplayNameFor(model => model.RememberMe)
							</label>
						</div>
						<div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 text-right">
							<input type="submit" value="Login" class="btn btn-success" style="width:auto;" />
						</div>
					</div>
				</div>
				<div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 border-top">
					<br />
					<div class="form-group row">
						<div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6">
							<a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancel</a>
						</div>
						<div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 text-right">
							<a asp-action="ForgotPassword" asp-controller="Account">Forgot Password ?</a>
						</div>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>